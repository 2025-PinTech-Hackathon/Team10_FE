<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvSolveCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포인트를 받을 수 있는 횟수 : 0/3"
            android:fontFamily="@font/freesentation_5medium"
            android:textSize="10sp"
            android:layout_gravity="end"/>

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q. 다음 중 기준금리가 인하되었을 때 일반적으로 발생할 수 있는 경제 현상으로 가장 적절한 것은?"
            android:textSize="20sp"
            android:fontFamily="@font/freesentation_7bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtAnswer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_5medium"
                android:textSize="15dp"
                android:hint="정답을 입력하세요"/>

            <Space
                android:layout_width="7dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/freesentation_7bold"
                android:backgroundTint="#809CB7"
                android:text="제출"
                android:textSize="20dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>