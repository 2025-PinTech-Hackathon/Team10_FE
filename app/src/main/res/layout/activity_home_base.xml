<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F6FB">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="650dp"
        android:background="#E3EDF7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="NEWS"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/MenuTxtView" />

    <FrameLayout
        android:id="@+id/MenuFragment"
        android:layout_width="409dp"
        android:layout_height="530dp"
        android:layout_marginTop="92dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/menusBgImgView"/>

    <ImageButton
        android:id="@+id/QuizBtn"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/quiz_image"
        app:layout_constraintTop_toTopOf="@id/menusBgImgView"
        app:layout_constraintBottom_toBottomOf="@id/menusBgImgView"
        app:layout_constraintStart_toStartOf="@id/menusBgImgView" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/news_imgae"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/menusBgImgView"
        app:layout_constraintBottom_toBottomOf="@id/menusBgImgView"
        app:layout_constraintStart_toStartOf="@id/menusBgImgView"
        app:layout_constraintEnd_toEndOf="@id/menusBgImgView"
        android:background="@android:color/transparent"
        android:id="@+id/NewsBtn"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/chat_image"
        android:layout_marginEnd="50dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/menusBgImgView"
        app:layout_constraintBottom_toBottomOf="@id/menusBgImgView"
        app:layout_constraintEnd_toEndOf="@id/menusBgImgView"
        android:background="@android:color/transparent"
        android:id="@+id/ChatBtn"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_info"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:id="@+id/ProfileInfoBtn" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/loading"
        android:id="@+id/loadingImgView"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>