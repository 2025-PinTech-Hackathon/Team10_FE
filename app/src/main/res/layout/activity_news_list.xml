<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="650dp"
        android:background="#E3EDF7">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="NEWS"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_info"
            android:layout_marginStart="230dp"
            android:background="@android:color/transparent"
            android:id="@+id/ProfileInfoBtn"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/NewsListView"
        android:dividerHeight="10dp"
        android:divider="@color/white"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="650dp"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/quiz_image"
        android:layout_marginTop="650dp"
        android:layout_marginStart="60dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/transparent"
        android:id="@+id/QuizBtn"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/news_imgae"
        android:layout_marginTop="650dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:id="@+id/NewsBtn"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/chat_image"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="60dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:id="@+id/ChatBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>